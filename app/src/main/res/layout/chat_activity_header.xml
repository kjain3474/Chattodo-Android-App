<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/connections_vertical_spacing">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:layout_marginLeft="@dimen/connections_horizontal_margin"
        android:id="@+id/chatBackButton"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/chat_heading_text_size"
        android:textColor="@color/greyishBrown"
        android:layout_marginLeft="@dimen/connections_horizontal_margin"
        android:layout_toRightOf="@+id/chatBackButton"
        android:id="@+id/chatHeaderTitle"
        android:text="Nishchal Kesarwani"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/more"
        android:layout_marginRight="@dimen/connections_horizontal_margin"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>