<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content">
    <TextView android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corners_lightpeach"
        android:text="Sample Text Sample Text Sample TextSample Text Sample Text Sample TextSample Text Sample Text Sample TextSample Text Sample Text Sample TextSample Text Sample Text Sample TextSample Text Sample Text Sample TextSample Text Sample Text Sample Text"
        android:textSize="@dimen/chat_message_text"
        android:textColor="@color/greyishBrown"
        android:layout_marginLeft="@dimen/chat_message_margin"
        android:layout_marginRight="@dimen/connections_horizontal_margin"
        android:layout_marginTop="@dimen/connections_vertical_spacing"
        android:layout_marginBottom="@dimen/connections_vertical_spacing"
        android:padding="@dimen/new_message_padding"
        android:id="@+id/chatMessageSent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chatMessageSent"
        android:text="20th March, 2018"
        android:textColor="@color/warmGrey"
        android:textSize="@dimen/connection_time_text"
        android:layout_marginRight="@dimen/connections_horizontal_margin"
        android:layout_alignParentRight="true"
        android:id="@+id/chatMessageTimeSent"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/todoButtonDimen"
        android:layout_height="@dimen/todoButtonDimen"
        android:layout_alignBottom="@+id/chatMessageSent"
        android:layout_marginLeft="@dimen/todo_button_margin_horizontal"
        android:backgroundTint="@color/greyishBrown"
        android:background="@drawable/tasks"
        android:id="@+id/todoSent"/>
</RelativeLayout>
